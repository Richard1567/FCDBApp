@page "{id:guid}"
@model FCDBApi.Pages.InspectionSheets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>InspectionTable</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InspectionTable.Branch)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InspectionTable.Branch)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InspectionTable.VehicleReg)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InspectionTable.VehicleReg)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InspectionTable.VehicleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InspectionTable.VehicleType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InspectionTable.InspectionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InspectionTable.InspectionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InspectionTable.NextInspectionDue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InspectionTable.NextInspectionDue)
        </dd>
    </dl>

    <h4>Inspection Items</h4>
    <div id="inspectionItems">
        @if (Model.CategoriesWithItems != null && Model.CategoriesWithItems.Any())
        {
            foreach (var category in Model.CategoriesWithItems)
            {
                <div class="category">
                    <h5>@category.CategoryName</h5>
                    <div class="items">
                        @foreach (var item in category.Items)
                        {
                            <div>
                                <strong>@item.ItemDescription</strong> - Result: @Model.InspectionTable.Details.FirstOrDefault(d => d.InspectionItemID == item.InspectionItemID)?.Result
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p>No inspection items available for the selected type.</p>
        }
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
