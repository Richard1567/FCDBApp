@page "{id:int}"
@model FCDBApi.Pages.Settings.EditSiteModel
@{
    ViewData["Title"] = "Edit Site";
}

<h1>Edit Site</h1>

<form method="post">
    <div class="form-group">
        <label for="SiteName">Site Name</label>
        <input type="text" id="SiteName" name="SiteName" class="form-control" value="@Model.Site.SiteName" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
