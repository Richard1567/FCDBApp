@page
@model FCDBApi.Pages.JobCards.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>JobCard</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.JobNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.JobNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.Site)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.Site)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.Engineer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.Engineer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.RegNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.RegNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.CustOrderNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.CustOrderNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.Odometer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.Odometer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCard.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCard.Description)
        </dd>
        <dt class="col-sm-2">
            Parts Used
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var part in Model.JobCard.PartsUsed)
                {
                    <li>
                        <strong>Name:</strong> @part.Name,
                        <strong>Part Number:</strong> @part.PartNumber,
                        <strong>Quantity:</strong> @part.Quantity,
                        <strong>Category:</strong> @part.Category
                    </li>
                }
            </ul>
        </dd>

        <!-- Engineer Print and Signature -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EngineerPrint)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EngineerPrint)
        </dd>
        <dt class="col-sm-2">
            Engineer Signature
        </dt>
        <dd class="col-sm-10">
            @if (Model.EngineerSignature != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.EngineerSignature)" alt="Engineer Signature" style="max-width: 200px; max-height: 100px;" />
            }
            else
            {
                <span>No Signature</span>
            }
        </dd>

        <!-- Branch Manager Print and Signature -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchManagerPrint)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BranchManagerPrint)
        </dd>
        <dt class="col-sm-2">
            Branch Manager Signature
        </dt>
        <dd class="col-sm-10">
            @if (Model.BranchManagerSignature != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.BranchManagerSignature)" alt="Branch Manager Signature" style="max-width: 200px; max-height: 100px;" />
            }
            else
            {
                <span>No Signature</span>
            }
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="JobCard.JobCardID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
